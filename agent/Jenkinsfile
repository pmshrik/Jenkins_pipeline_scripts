pipeline {
    agent any
    
  
    
    stages {
        stage('Build') { 

           
            
                steps {
                    
                    sh '''
                        sleep 5 
                    '''
                }
        }
        stage('Test') { 
            steps {
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE'){
                sh '''
                        sleep 10
                        exit 1
                   '''
        }
    }
        }     
        stage('Deploy') { 
            steps {
                 sh '''
                        sleep 5 
                    '''
                }
            
            
        }
    }
}